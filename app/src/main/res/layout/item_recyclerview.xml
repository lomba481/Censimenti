<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/orange_restart"
    app:cardCornerRadius="20dp"
    app:cardElevation="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/marker"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginVertical="5dp"
            android:padding="8dp"
            app:srcCompat="@drawable/baseline_place_24" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/marker"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Comune"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nCommessa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Commessa"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp">

            <ImageView
                android:id="@+id/puntini_comune"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/baseline_more_horiz_24" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>